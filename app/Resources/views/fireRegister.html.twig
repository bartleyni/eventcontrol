{% extends 'BathSU.html.twig' %}
{% block headerbottom %}
Event Control Fire Register
{% endblock %}
{% block layout %}
    {% embed '3-9.html.twig' %}
        {% block content %}
            <div class="wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Attendees</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {% if attendees is empty %}
                            No attendees signed in
                        {% else %}
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <td><strong>Name</strong></td>
                                        <td><strong>Phone</strong></td>
                                        <td><strong>Email</strong></td>
                                        <td><strong>Time In</strong></td>
                                        <td><strong>Time Out</strong></td>
                                    </tr>
                                    {% for attendee in attendees %}
                                        <tr>
                                            <td>{{ attendee.name }}</td>
                                            <td>{{ attendee.phone }}</td>
                                            <td>{{ attendee.email }}</td>
                                            <td>{{ attendee.time_in|date('Y-m-d H:i:s', "Europe/London") }}</td>
                                            {% if attendee.time_out is null %}
                                                <td><a href="{{ path('signout', {'id': attendee.id}) }}">Sign-out</a></td>
                                            {% else %}
                                            <td>{{ attendee.time_out|date('Y-m-d H:i:s', "Europe/London") }}</td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}                           
                                </tbody>
                            </table>
                                    <div class="col-md-12">
                                        <a href="{{ path('signout', {'id': 'all'}) }}" class="btn btn-warning btn-block">
                                           Sign All Out
                                        </a>
                                    </div> 
                        {% endif %}  
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block sidebar %}
            {% include 'sidebar.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock %}
