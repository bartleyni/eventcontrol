{% extends 'BathSU.html.twig' %}
{% block headerbottom %}
<h2>Events Settings</h2>
{% endblock %}
{% block layout %}
    {% embed '3-9.html.twig' %}
        {% block content %}
            <div class="wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Events Lists</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {% if events is empty %}
                            No events available
                        {% else %}
                            <table class="table table-sm table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Event Date</th>
                                        <th>Event Name</th>
                                        <th>Event Client</th>
                                        <th>Event Logging Start Date</td>
                                        <th>Event Logging Stop Date</td>
                                        <th>Active?</td>
                                        <th>Edit</td>
                                        <th>Delete</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in events %}
                                        <tr>
                                            <td>{{ event.event_date|date('Y-m-d H:i', "Europe/London") }}</td>
                                            <td>{{ event.name }}</td>
                                            <td>{{ event.client }}</td>
                                            <td>{{ event.event_log_start_date }}</td>
                                            <td>{{ event.event_log_stop_date }}</td>
                                            <td>{{ event.event_active }}</td>
                                            <td><a href="{{ path('edit_event', {'id': event.id}) }}">Edit</a></td>
                                            <td><a href="{{ path('delete_event', {'id': event.id}) }}">Delete</a></td>
                                        </tr>
                                    {% endfor %}                           
                                </tbody>
                            </table>
                        {% endif %}  
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block sidebar %}
            {% include 'sidebar.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}