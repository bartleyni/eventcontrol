{% extends 'BathSU.html.twig' %}
{% block headerbottom %}
<h2>Events Settings</h2>
{% endblock %}
{% block layout %}
    {% embed '3-9.html.twig' %}
        {% block content %}
            <div class="wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Events Lists</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {% if events is empty %}
                            No events available
                        {% else %}
                            <table class="table table-sm table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Name</th>
                                        <th>Client</th>
                                        <th>Logging Start Date</td>
                                        <th>Logging Stop Date</td>
                                        <th>Active?</td>
                                        <th>Edit</td>
                                        <th>Delete</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for event in events %}
                                        <tr>
                                            <td>{{ event.event_date|date('Y-m-d H:i', "Europe/London") }}</td>
                                            <td>{{ event.name }}</td>
                                            <td>{{ event.client }}</td>
                                            <td>{{ event.event_log_start_date|date('Y-m-d H:i', "Europe/London") }}</td>
                                            <td>{{ event.event_log_stop_date|date('Y-m-d H:i', "Europe/London") }}</td>
                                            <td>{% if event.event_active %}
                                                    <span class="glyphicon glyphicon-ok" aria-hidden="true" aria-label="Active"></span> 
                                                {% else %}
                                                    <a href="{{ path('activate_event', {'id': event.id}) }}">Activate</a>
                                                {% endif %}
                                            </td>
                                            <td><a href="{{ path('edit_event', {'id': event.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true" aria-label="Edit"></span></a></td>
                                            <td><a href="{{ path('delete_event', {'id': event.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true" aria-label="Delete"></span></a></td>
                                        </tr>
                                    {% endfor %}                           
                                </tbody>
                            </table>
                        {% endif %}
                        <a href="{{ path('filter_event_list', {'filter': 'new'}) }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true" aria-label="Add"></span></a>
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block sidebar %}
            {% include 'sidebar.twig' %}
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}