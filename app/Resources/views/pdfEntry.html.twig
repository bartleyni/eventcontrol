<div class="wrapper">
    <div class="row">
        <div class="col-md-12">
            <h1>Log Entry(ID: {{ entry.id }})</h1>
            Event: {{ activeEventName() }} <br>
            Report Produced: {{ "now"|date('Y-m-d H:i:s', "Europe/London") }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>Entry Information (ID: {{ entry.id }})</h2>
            <br>
            <div class="row">
                <div class="col-md-6">
                    Operator: {{ entry.operator }}
                </div>
                <div class="col-md-6">
                    Log Open Time (Timestamp): {{ entry.log_entry_open_time|date('Y-m-d H:i:s', "Europe/London") }} ({{ entry.log_timestamp|date('Y-m-d H:i:s', "Europe/London") }})
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    Short Description: {{ entry.logBlurb }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    Location: {{ entry.location }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    Reported By: {{ entry.reportedBy }}
                </div>
            </div>
            <br>
                <div class="row" id="General">
                    <h2>General</h2><br>
                    {% if general is null %}
                        No General Info
                    {% else %}
                        Description:<br>
                        {{ general.general_description }}
                        Closed:<br>
                        {{ general.general_entry_closed_time|date('Y-m-d H:i:s', "Europe/London") }}
                        <br>
                    {% endif %}
                </div>
                <div class="row" id="Medical">
                    <h2>Medical</h2>
                </div>
                <div class="row" id="Security">
                    <h2>Security</h2>
                </div>
                <div class="row" id="Lost">
                    <h2>Lost Property</h2>
                </div>                                
        </div>
    </div>
</div>